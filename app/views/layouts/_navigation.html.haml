.header
  .container
    %nav.navbar.navbar-default{role: "navigation"}
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "#", style: 'display: inline-block;height: 100%;margin-right: 25px;'}
            = image_tag 'logo.png', width: '150', height: '55'

        #bs-example-navbar-collapse-1.collapse.navbar-collapse{style: 'margin-top: 15px'}
          %ul.nav.navbar-nav.navbar-right
            %li= link_to 'Home', root_url
            - root_navigation.each do |root|
              %li.dropdown
                = link_to root.title, page_path(root)
                - if root.children.exists?
                  %span.caret
                  %ul.submenu
                    - root.children.each do |child|
                      %li= link_to child.title, page_path(child)