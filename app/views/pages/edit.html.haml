%h2 Edit Page

%h5= link_to 'View Page', page_path(@page)

= simple_form_for @page, html: { role: 'form' } do |f|
  .form-group
    = f.input :title, placeholder: 'Page Title', input_html: { style: 'width: 100%' }
    = f.input :content, :as => :ckeditor, input_html: { :ckeditor => {:toolbar => 'Full'} }

    = f.submit