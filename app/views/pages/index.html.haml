.row
  .col-xs-12.col-md-3
    .panel-group#accordion
      .panel.panel-default
        .panel-heading
          %h4.panel-title
            %a{'data-toggle' => "collapse", 'data-parent' => "#accordion", href: "#collapseOne"} Pages
        .panel-collapse.collapse.in#collapseOne
          .panel-body
            - @pages.each do |page|
              .page-title= link_to page.title, edit_page_path(page)
              %ul
              - page.children.each do |child|
                %li
                  %span.handle [drag]
                  =link_to child.title, edit_page_path(child)


